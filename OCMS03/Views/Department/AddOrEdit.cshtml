@model OCMS03.Models.Content.Department

<h2 class="text-info">@(Model.DepartmentId!= null ? "Edit" : "Create") Department</h2>
<hr class="my-4" />
<div class="row">
    <div class="col-lg-12">
        <form asp-action="AddOrEdit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
            <input type="hidden" asp-for="DepartmentId" />
            <div class="form-group row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label class="form-control-label" asp-for="DepartmentName">Department Name</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text"><i class="fa fa-hospital-o"></i></div>
                            </div>
                            <input asp-for="DepartmentName" class="form-control" placeholder="Department Name" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="form-control-label" asp-for="ContactNumber">Phone Number</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text"><i class="fa fa-phone"></i></div>
                            </div>
                            <input asp-for="ContactNumber" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="form-control-label" asp-for="FaxNumber">Fax Number</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text"><i class="fa fa-fax"></i></div>
                            </div>
                            <input asp-for="FaxNumber" class="form-control" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label class="form-control-label" asp-for="EmailAddress">Email Address</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text"><i class="fa fa-envelope"></i></div>
                            </div>
                            <input asp-for="EmailAddress" class="form-control" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="row  pb-6">
                <div class="col-md-12">
                    <div class="form-group">
                        <label class="form-control-label" asp-for="HospitalId">Hospital</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text"><i class="fa fa-h-square"></i></div>
                            </div>
                            <select asp-for="HospitalId" class="form-control" asp-items="ViewBag.HospitalId">
                                <option value="" class="option">Select Hospital</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="form-group">
                    <button type="submit" class="btn btn-primary submit-btn">
                        @(Model.DepartmentId != null ? "Update" : "Create")
                    </button>
                    <a asp-action="Index" class="btn btn-secondary submit-btn">
                        Back
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>
